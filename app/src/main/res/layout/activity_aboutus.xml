<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aboutus">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/about"
        android:layout_width="579dp"
        android:layout_height="338dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/abou" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="445dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="287dp"
                android:layout_height="284dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="21dp"
                android:background="@drawable/bar"
                android:backgroundTint="#99F30D0D"
                android:clickable="true"
                android:gravity="center"
                android:onClick="openLink1"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="5dp"
                android:text="Arjun Kumar E\n The topper of the batch, Silent Guy, Private Persoon\n Team Lead \n The writer of the assignments,subj, word and creator of presentations "
                android:textColor="#0B0EC6"
                android:textSize="19dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/arjun"
                android:layout_width="123dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ar"
                app:srcCompat="@drawable/acc" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/hima"
                android:layout_width="114dp"
                android:layout_height="274dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hima"
                app:srcCompat="@drawable/acc" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="297dp"
                android:layout_height="276dp"
                android:layout_below="@id/textView1"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginTop="19dp"
                android:background="@drawable/bar"
                android:backgroundTint="#99AD812A"
                android:clickable="true"
                android:gravity="center"
                android:onClick="openLink2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Hima Nagasai Manoj\n don't know why the heck he was there, \n a living being just exists. \n just work  on anything try to make it work, sometimes it works and most of the time he destroys "
                android:textColor="#0460EB"
                android:textSize="19dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="291dp"
                android:layout_height="220dp"
                android:layout_below="@id/textView2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="-2dp"
                android:layout_marginTop="29dp"
                android:background="@drawable/bar"
                android:backgroundTint="#990D69F3"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:text="Guru Sasi Kumar \n the continuous studyholic bbut cant remember a bit when its needed the most \n Piracy movie watcher \n Hima's Assistant,hotspoter etc. "
                android:textColor="#FFFFFF"
                android:textSize="19dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/sasi"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sa"
                app:srcCompat="@drawable/acc" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/rishab"
                android:layout_width="123dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ri"
                app:srcCompat="@drawable/acc" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="269dp"
                android:layout_height="276dp"
                android:layout_below="@+id/textView3"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:background="@drawable/bar"
                android:clickable="true"
                android:gravity="center"
                android:onClick="openLink4"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:text="Rishab Maddeshiya\n Waste fellow of the grooup\n some shit which push every person in team to risk\n that the reason i call him bladdy fucker"
                android:textColor="#F10A0A"
                android:textSize="20dp" />
        </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>